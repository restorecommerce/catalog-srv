{
  "name": "@restorecommerce/catalog-srv",
  "version": "0.0.4",
  "description": "Restore Commerce microservice for catalog and offers",
  "main": "./lib/index.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/catalog-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "catalog",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/chassis-srv": "^0.1.11",
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/kafka-client": "^0.1.13",
    "@restorecommerce/logger": "^0.6.4",
    "@restorecommerce/protos": "^0.0.22",
    "@restorecommerce/resource-base-interface": "^0.0.7",
    "@restorecommerce/service-config": "^0.4.1",
    "elasticsearch": "^16.7.2",
    "lodash": "^4.17.21",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@types/elasticsearch": "^5.0.37",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "should": "^13.2.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:tsc",
    "build:clean": "rimraf lib",
    "build:tsc": "tsc -d",
    "createtopics": "node setupTopics.js io.restorecommerce.command",
    "dev": "cross-env NODE_ENV=development npm run createtopics && nodemon --watch './src/**/*.ts' --exec 'ts-node' ./src/start.ts",
    "lint": "eslint src --ext .ts --fix",
    "mocha": "cross-env NODE_ENV=test mocha -R spec ./test/*.js --full-trace --exit",
    "pretest": "npm run build && npm run tsctests && npm run createtopics",
    "start": "npm run createtopics && node lib/start.js",
    "test": "npm run lint",
    "test-debug": "mocha ./test/*.js --inspect-brk --exit",
    "tsctests": "tsc test/*.ts --module commonjs -target ES6"
  },
  "engines": {
    "node": ">= 9.2.0"
  }
}
