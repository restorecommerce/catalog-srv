{
  "name": "@restorecommerce/catalog-srv",
  "version": "1.3.3",
  "description": "Restore Commerce microservice for catalog and offers",
  "main": "./lib/index.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/catalog-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "catalog",
    "srv"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/chassis-srv": "^1.4.7",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/kafka-client": "^1.1.19",
    "@restorecommerce/logger": "^1.2.9",
    "@restorecommerce/rc-grpc-clients": "^5.1.19",
    "@restorecommerce/resource-base-interface": "^1.4.5",
    "@restorecommerce/service-config": "^1.0.11",
    "elasticsearch": "^16.7.3",
    "lodash-es": "^4.17.21",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@restorecommerce/dev": "^0.0.7",
    "@types/elasticsearch": "^5.0.43",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "c8": "^9.1.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-plugin-prefer-arrow-functions": "^3.2.4",
    "mocha": "^10.3.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:tsc",
    "build:clean": "rimraf lib",
    "build:tsc": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.js --minify --tree-shaking=true --sourcemap=inline",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "lint": "eslint src --ext .ts --fix",
    "start": "node lib/start.js",
    "mocha": "cross-env NODE_ENV=test mocha --timeout 10000 --full-trace --exit --trace-warnings --exit",
    "test": "npm run lint && c8 --reporter=text npm run mocha"
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
