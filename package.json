{
  "name": "@restorecommerce/catalog-srv",
  "version": "1.3.3",
  "description": "Restore Commerce microservice for catalog and offers",
  "main": "./lib/index.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/catalog-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "catalog",
    "srv"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/chassis-srv": "^1.4.8",
    "@restorecommerce/cluster-service": "^1.0.2",
    "@restorecommerce/kafka-client": "^1.1.20",
    "@restorecommerce/logger": "^1.2.9",
    "@restorecommerce/rc-grpc-clients": "^5.1.20",
    "@restorecommerce/resource-base-interface": "^1.4.7",
    "@restorecommerce/service-config": "^1.0.11",
    "elasticsearch": "^16.7.3",
    "lodash-es": "^4.17.21",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release-plus/docker": "^3.1.3",
    "@restorecommerce/dev": "^0.0.8",
    "@types/elasticsearch": "^5.0.43",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^7.1.0",
    "c8": "^9.1.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "husky": "^8.0.0",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "should": "^13.2.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:es",
    "build:clean": "rimraf lib",
    "build:es": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --minify --tree-shaking=true --sourcemap=inline",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "lint": "eslint src --ext .ts --fix",
    "start": "node lib/start.cjs",
    "lcov-report": "c8 report --reporter=lcov",
    "coveralls": "c8 report --reporter=text-lcov | coveralls",
    "mocha": "cross-env NODE_ENV=test mocha --timeout 10000 --full-trace --exit --trace-warnings --exit",
    "test": "npm run lint && c8 --reporter=text npm run mocha",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/catalog-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/catalog-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
